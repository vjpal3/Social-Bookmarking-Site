
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="grid-x grid-padding-x">
    <div class="small-3 large-3 cell"></div>
    <div class="small-8 large-4 cell">
      <h3>Sign in</h3>
    </div>
    <div class="small-1 large-5 cell"></div>

    <div class="small-3 large-3 cell">
      <%= f.label :email, class: "text-right middle" %>
    </div>
    <div class="small-8 large-4 cell">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="small-1 large-5 cell"></div>

    <div class="small-3 large-3 cell">
      <%= f.label :password, class: "text-right middle" %>
    </div>
    <div class="small-8 large-4 cell">
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="small-1 large-5 cell"></div>

    <% if devise_mapping.rememberable? -%>
      <div class="small-3 large-3 cell"></div>
      <div class="small-8 large-4 cell">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      <div class="small-1 large-5 cell"></div>
    <% end -%>

    <div class="small-3 large-3 cell"></div>
    <div class="small-8 large-4 cell actions">
      <%= f.submit "Log in", class: "button secondary expanded" %>
    </div>
    <div class="small-1 large-5 cell"></div>
  </div>

<% end %>

<%= render "devise/shared/links" %>
